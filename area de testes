            <button id="saveDataBtn" title="Salvar backup local em .txt">Salvar</button>
            <button id="restoreDataBtn" title="Restaurar dados a partir de um backup">Resgatar</button>
            <input type="file" id="restoreFileInput" accept=".txt,.json" style="display: none;">
