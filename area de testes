                    <tfoot> <tr class="total-row"> <td><strong>Total Fixo</strong></td> <td id="fixedTotal">R$ 0,00</td> <td></td> </tr> </tfoot>
                </table>
            </div>

            <div class="grid-item">
                <h2 class="card-header nubank-header"><span>Nubank</span></h2>
                <table id="nubankTable">
