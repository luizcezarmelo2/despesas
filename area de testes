    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
        import { getDatabase, ref, set, onValue } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-database.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBiikcagIm1p7wJG6DsHijkvdy1fpDBn8Y",
            authDomain: "bd-teste-c931c.firebaseapp.com",
            databaseURL: "https://bd-teste-c931c-default-rtdb.europe-west1.firebasedatabase.app",
            projectId: "bd-teste-c931c",
            storageBucket: "bd-teste-c931c.appspot.com",
            messagingSenderId: "270308100761",
            appId: "1:270308100761:web:ae34fde6d5ae86b67b0608"
        };

        const app = initializeApp(firebaseConfig);
        const database = getDatabase(app);

        let current_date = new Date();
        let debounceTimer;

        // --- UI ELEMENTS ---
        const ui = {
            loginOverlay: document.getElementById('login-overlay'),
            loginTitle: document.getElementById('login-title'),
            loginMessage: document.getElementById('login-message'),
            passcodeInput: document.getElementById('passcode-input'),
            loginButton: document.getElementById('login-button'),
            currentMonthYear: document.getElementById('currentMonthYear'),
            prevMonthBtn: document.getElementById('prevMonthBtn'),
            nextMonthBtn: document.getElementById('nextMonthBtn'),
            migrateDataBtn: document.getElementById('migrateDataBtn'),
            saveDataBtn: document.getElementById('saveDataBtn'),
            restoreDataBtn: document.getElementById('restoreDataBtn'),
            restoreFileInput: document.getElementById('restoreFileInput'),
            fixedExpensesTable: document.getElementById('fixedExpensesTbody'),
            nubankTable: document.getElementById('nubankTbody'),
            c6Table: document.getElementById('c6Tbody'),
            installmentsSummaryTable: document.getElementById('installmentsSummaryTable').tBodies[0],
            fixedTotal: document.getElementById('fixedTotal'),
            nubankTotal: document.getElementById('nubankTotal'),
            c6Total: document.getElementById('c6Total'),
            totalGeral: document.getElementById('totalGeral'),
            status: document.getElementById('status')
        };
        
        // --- INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', initLogin);

        // --- LOGIN LOGIC ---
        function initLogin() {
            const passcodeRef = ref(database, 'passcode');
            onValue(passcodeRef, (snapshot) => {
                const savedPasscode = snapshot.val();
                if (savedPasscode) {
                    setupLoginScreen(savedPasscode);
                } else {
                    setupFirstAccessScreen();
                }
            }, { onlyOnce: true });
        }

        function setupLoginScreen(correctPasscode) {
            ui.loginTitle.textContent = "Acessar Painel";
            ui.loginMessage.textContent = "Digite seu código de 4 dígitos para continuar.";
            ui.loginButton.textContent = "Entrar";

            const handleLogin = () => {
                if (ui.passcodeInput.value === correctPasscode) {
                    ui.loginOverlay.style.opacity = '0';
                    setTimeout(() => ui.loginOverlay.style.display = 'none', 300);
                    initializeApp();
                } else {
                    alert('Código incorreto!');
                    ui.passcodeInput.value = '';
                }
            };
            ui.loginButton.addEventListener('click', handleLogin);
            ui.passcodeInput.addEventListener('keyup', (e) => {
                if(e.key === 'Enter') handleLogin();
            });
        }

        function setupFirstAccessScreen() {
            ui.loginTitle.textContent = "Primeiro Acesso";
            ui.loginMessage.textContent = "Crie um código de 4 dígitos para proteger seus dados.";
            ui.loginButton.textContent = "Salvar e Entrar";

            const handleSetup = () => {
                const newPasscode = ui.passcodeInput.value;
                if (newPasscode && newPasscode.length === 4 && !isNaN(newPasscode)) {
                    set(ref(database, 'passcode'), newPasscode).then(() => {
                        ui.loginOverlay.style.opacity = '0';
                        setTimeout(() => ui.loginOverlay.style.display = 'none', 300);
                        initializeApp();
                    }).catch(err => alert("Erro ao salvar o código. Tente novamente."));
                } else {
                    alert('Por favor, insira um código de 4 números.');
                }
            };
            ui.loginButton.addEventListener('click', handleSetup);
            ui.passcodeInput.addEventListener('keyup', (e) => {
                if(e.key === 'Enter') handleSetup();
            });
        }

        function initializeApp() {
            updateMonthDisplay();
            loadData();

            ui.prevMonthBtn.addEventListener('click', () => changeMonth(-1));
            ui.nextMonthBtn.addEventListener('click', () => changeMonth(1));
            ui.migrateDataBtn.addEventListener('click', migrateDataToNextMonth);
            ui.saveDataBtn.addEventListener('click', saveDataAsTxt);
            ui.restoreDataBtn.addEventListener('click', () => ui.restoreFileInput.click());
            ui.restoreFileInput.addEventListener('change', restoreDataFromFile);
            
            setupTableListeners(ui.fixedExpensesTable, 'fixed');
            setupTableListeners(ui.nubankTable, 'nubank');
            setupTableListeners(ui.c6Table, 'c6');
        }
        
        // --- BACKUP & RESTORE FUNCTIONS ---
        function saveDataAsTxt() {
            const dataRef = ref(database, 'expenses/');
            onValue(dataRef, (snapshot) => {
                const data = snapshot.val();
                if (!data) {
                    showStatus('Não há dados para salvar.', 3000);
                    return;
                }
                const dataStr = JSON.stringify(data, null, 2);
                const blob = new Blob([dataStr], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                const date = new Date().toISOString().slice(0, 10);
                a.download = `backup_despesas_${date}.txt`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                showStatus('Backup gerado com sucesso!', 3000);
            }, { onlyOnce: true });
        }

        function restoreDataFromFile(event) {
            if (!confirm('ATENÇÃO! Isto irá substituir TODOS os dados existentes na nuvem pelos dados do arquivo. Deseja continuar?')) {
                event.target.value = null;
                return;
            }
            
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const parsedData = JSON.parse(e.target.result);
                    const dataRef = ref(database, 'expenses/');
                    set(dataRef, parsedData)
                        .then(() => {
                            showStatus('Dados restaurados com sucesso!', 3000);
                            loadData(); // Recarrega os dados na tela
                        })
                        .catch(err => {
                            showStatus('Erro ao salvar dados restaurados.', 5000);
                            console.error(err);
                        });
                } catch (error) {
                    showStatus('Erro: Arquivo de backup inválido.', 5000);
                    console.error("Parse error:", error);
                } finally {
                    event.target.value = null;
                }
            };
            reader.readAsText(file);
        }

        // --- DATE & NAVIGATION ---
        function changeMonth(direction) {
            saveData(true);
            current_date.setMonth(current_date.getMonth() + direction);
            updateMonthDisplay();
            loadData();
        }

        function updateMonthDisplay() {
            const month = current_date.toLocaleString('pt-BR', { month: 'long' });
            const year = current_date.getFullYear();
            ui.currentMonthYear.textContent = `${month.charAt(0).toUpperCase() + month.slice(1)} de ${year}`;
        }
        
        function getMonthYearKey(date) {
            return `${date.getFullYear()}_${(date.getMonth() + 1).toString().padStart(2, '0')}`;
        }

        // --- DATA HANDLING (FIREBASE) ---
        function migrateDataToNextMonth() {
            if (!confirm("Tem certeza que deseja migrar os dados deste mês para o próximo? Isso irá sobrescrever quaisquer dados existentes no próximo mês.")) {
                return;
            }
            showStatus('Migrando dados...', 5000);
            const migratedData = {
                fixed: parseTableData(ui.fixedExpensesTable).map(item => [item[0], item[1], false]), // Reset 'pago' status
                nubank: processContinuingInstallments(parseTableData(ui.nubankTable)),
                c6: processContinuingInstallments(parseTableData(ui.c6Table))
            };
            const nextMonthDate = new Date(current_date);
            nextMonthDate.setMonth(nextMonthDate.getMonth() + 1);
            const nextMonthKey = getMonthYearKey(nextMonthDate);
            set(ref(database, 'expenses/' + nextMonthKey), migratedData)
                .then(() => showStatus('Dados migrados com sucesso!', 3000))
                .catch((error) => {
                    console.error("Erro ao migrar dados: ", error);
                    showStatus('Ocorreu um erro na migração.', 5000);
                });
        }

        function showStatus(message, duration = 3000) {
            ui.status.textContent = message;
            ui.status.style.opacity = '1';
            setTimeout(() => { ui.status.style.opacity = '0'; }, duration);
        }

        function saveData(force = false) {
            clearTimeout(debounceTimer);
            const saveAction = () => {
                const monthKey = getMonthYearKey(current_date);
                const dataToSave = {
                    fixed: parseTableData(ui.fixedExpensesTable),
                    nubank: parseTableData(ui.nubankTable),
                    c6: parseTableData(ui.c6Table),
                };
                set(ref(database, 'expenses/' + monthKey), dataToSave)
                    .then(() => showStatus('Salvo!'))
                    .catch((error) => {
                        console.error("Erro ao salvar: ", error);
                        showStatus('Erro ao salvar!', 5000);
                    });
            };
            if (force) {
                saveAction();
            } else {
                debounceTimer = setTimeout(saveAction, 2000);
            }
        }
        
        function loadData() {
            const monthKey = getMonthYearKey(current_date);
            const dataRef = ref(database, 'expenses/' + monthKey);
            onValue(dataRef, (snapshot) => {
                const loadedData = snapshot.val();
                [ui.fixedExpensesTable, ui.nubankTable, ui.c6Table].forEach(t => t.innerHTML = '');
                if (loadedData) {
                    populateTable(ui.fixedExpensesTable, loadedData.fixed || []);
                    populateTable(ui.nubankTable, loadedData.nubank || []);
                    populateTable(ui.c6Table, loadedData.c6 || []);
                } else {
                    loadPreviousMonthData();
                }
                [ui.fixedExpensesTable, ui.nubankTable, ui.c6Table].forEach(ensureEmptyRow);
                updateAllTotals();
            }, { onlyOnce: true });
        }
        
        function loadPreviousMonthData() {
            const prevMonthDate = new Date(current_date);
            prevMonthDate.setMonth(prevMonthDate.getMonth() - 1);
            const prevMonthKey = getMonthYearKey(prevMonthDate);
            onValue(ref(database, 'expenses/' + prevMonthKey), (snapshot) => {
                const prevData = snapshot.val();
                let dataForNewMonth = { fixed: [], nubank: [], c6: [] };
                if (prevData) {
                    dataForNewMonth.fixed = (prevData.fixed || []).map(item => [item[0], item[1], false]); // Reset 'pago' status
                    dataForNewMonth.nubank = processContinuingInstallments(prevData.nubank || []);
                    dataForNewMonth.c6 = processContinuingInstallments(prevData.c6 || []);
                }
                populateTable(ui.fixedExpensesTable, dataForNewMonth.fixed);
                populateTable(ui.nubankTable, dataForNewMonth.nubank);
                populateTable(ui.c6Table, dataForNewMonth.c6);
                [ui.fixedExpensesTable, ui.nubankTable, ui.c6Table].forEach(ensureEmptyRow);
                updateAllTotals();
                saveData(true);
            }, { onlyOnce: true });
        }
        
        function processContinuingInstallments(installments) {
            return installments.reduce((acc, item) => {
                const parts = (item[2] || "0/0").match(/(\d+)\/(\d+)/);
                if (parts) {
                    let current = parseInt(parts[1], 10);
                    const total = parseInt(parts[2], 10);
                    if (current < total) {
                        acc.push([item[0], item[1], `${current + 1}/${total}`]);
                    }
                }
                return acc;
            }, []);
        }

        // --- TABLE MANIPULATION ---
        function populateTable(tbody, dataArray) {
            tbody.innerHTML = '';
            dataArray.forEach(rowData => {
                const row = tbody.insertRow();
                if (tbody.id === 'fixedExpensesTbody') {
                    const descCell = row.insertCell();
                    descCell.textContent = rowData[0] || '';
                    descCell.setAttribute('contenteditable', 'true');
                    
                    const valueCell = row.insertCell();
                    valueCell.textContent = rowData[1] || '';
                    valueCell.setAttribute('contenteditable', 'true');
                    
                    const paidCell = row.insertCell();
                    const checkbox = document.createElement('input');
                    checkbox.type = 'checkbox';
                    checkbox.checked = rowData[2] === true;
                    paidCell.style.textAlign = 'center';
                    paidCell.appendChild(checkbox);
                } else {
                    rowData.forEach(cellData => {
                        const cell = row.insertCell();
                        cell.textContent = cellData;
                        cell.setAttribute('contenteditable', 'true');
                    });
                }
            });
        }

        function parseTableData(tbody) {
            if (tbody.id === 'fixedExpensesTbody') {
                 return Array.from(tbody.rows).map(row => [
                    row.cells[0].textContent.trim(),
                    row.cells[1].textContent.trim(),
                    row.cells[2].querySelector('input[type="checkbox"]').checked
                ]).filter(rowData => rowData[0] !== '' || rowData[1] !== '');
            }
            return Array.from(tbody.rows).map(row => 
                Array.from(row.cells).map(cell => cell.textContent.trim())
            ).filter(rowData => rowData.some(cellData => cellData !== ''));
        }

        function ensureEmptyRow(tbody) {
            const isFixedTable = tbody.id === 'fixedExpensesTbody';
            const isRowEmpty = (row) => {
                 if (isFixedTable) {
                    return row.cells[0].textContent.trim() === '' && row.cells[1].textContent.trim() === '';
                }
                return Array.from(row.cells).every(cell => cell.textContent.trim() === '');
            }

            if (tbody.rows.length === 0 || !isRowEmpty(tbody.rows[tbody.rows.length - 1])) {
                addNewRow(tbody);
            }
        }

        function addNewRow(tbody, focusFirstCell = false) {
            const newRow = tbody.insertRow();
             if (tbody.id === 'fixedExpensesTbody') {
                newRow.insertCell().setAttribute('contenteditable', 'true');
                newRow.insertCell().setAttribute('contenteditable', 'true');
                const paidCell = newRow.insertCell();
                const checkbox = document.createElement('input');
                checkbox.type = 'checkbox';
                paidCell.style.textAlign = 'center';
                paidCell.appendChild(checkbox);
            } else {
                const colCount = tbody.parentElement.tHead.rows[0].cells.length;
                for (let i = 0; i < colCount; i++) {
                    newRow.insertCell().setAttribute('contenteditable', 'true');
                }
            }
            if (focusFirstCell) newRow.cells[0].focus();
        }
        
        function setupTableListeners(tbody, type) {
            tbody.addEventListener('input', (e) => {
                 if (e.target.hasAttribute('contenteditable')) {
                    updateTotals(type);
                    saveData();
                    ensureEmptyRow(tbody);
                 }
            });

            if (type === 'fixed') {
                 tbody.addEventListener('change', (e) => {
                    if (e.target.type === 'checkbox') {
                       saveData();
                    }
                 });
            }

            tbody.addEventListener('keydown', (e) => {
                if (e.target.tagName !== 'TD') return;

                const cell = e.target;
                const row = cell.parentElement;

                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    addNewRow(tbody, true);
                } else if (e.key === 'Tab') {
                    // This logic might need review if complex navigation is required, but it's kept from original
                }
            });
        }

        // --- CALCULATIONS & SUMMARY ---
        function formatCurrency(value) {
            return value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        }

        function parseCurrency(text) {
            return parseFloat(String(text).replace(/[R$\s.]/g, '').replace(',', '.')) || 0;
        }

        function calculateColumnTotal(tbody, colIndex) {
            return Array.from(tbody.rows).reduce((total, row) => 
                total + (row.cells[colIndex] ? parseCurrency(row.cells[colIndex].textContent) : 0), 0);
        }
        
        function updateInstallmentSummary() {
            ui.installmentsSummaryTable.innerHTML = '';
            const allInstallments = [
                ...parseTableData(ui.nubankTable).map(d => ({ data: d, card: 'Nubank' })),
                ...parseTableData(ui.c6Table).map(d => ({ data: d, card: 'C6 Bank' }))
            ];
            allInstallments.forEach(({ data, card }) => {
                const parts = (data[2] || "").match(/(\d+)\/(\d+)/);
                if (!parts) return;
                const remaining = parseInt(parts[2], 10) - parseInt(parts[1], 10);
                if (remaining < 0) return; // Ignore finished installments
                const endDate = new Date(current_date);
                endDate.setMonth(endDate.getMonth() + remaining);
                const endMonth = endDate.toLocaleString('pt-BR', { month: 'long' });
                const endYear = endDate.getFullYear();
                const row = ui.installmentsSummaryTable.insertRow();
                row.insertCell().textContent = data[0];
                row.insertCell().textContent = card;
                row.insertCell().textContent = data[2];
                row.insertCell().textContent = `${endMonth.charAt(0).toUpperCase() + endMonth.slice(1)}/${endYear}`;
            });
        }

        function updateTotals(type) {
            const totalsMap = {
                fixed: { el: ui.fixedTotal, table: ui.fixedExpensesTable },
                nubank: { el: ui.nubankTotal, table: ui.nubankTable },
                c6: { el: ui.c6Total, table: ui.c6Table }
            };
            if (totalsMap[type]) {
                totalsMap[type].el.textContent = formatCurrency(calculateColumnTotal(totalsMap[type].table, 1));
            }
            updateAllTotals();
        }

        function updateAllTotals() {
            const fixedTotal = calculateColumnTotal(ui.fixedExpensesTable, 1);
            const nubankTotal = calculateColumnTotal(ui.nubankTable, 1);
            const c6Total = calculateColumnTotal(ui.c6Table, 1);
            ui.fixedTotal.textContent = formatCurrency(fixedTotal);
            ui.nubankTotal.textContent = formatCurrency(nubankTotal);
            ui.c6Total.textContent = formatCurrency(c6Total);
            ui.totalGeral.textContent = formatCurrency(fixedTotal + nubankTotal + c6Total);
            updateInstallmentSummary();
        }
    </script>
</body>

</html>
